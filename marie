from tkinter import *            # tkinteri põhivahendid
from tkinter import ttk          # platvormi ühise stiili saamiseks

# see funktsioon käivitatakse nupule klõpsamisel
def logisisse():
    kasutajanimixdbong = kasutajanimi_entry.get()
    paroolxdbong = parool_entry.get()

def registreeri():
    regamine = username_entry.get()
    regamisesalasõna = username_entry.get()
    

# loome akna
raam = Tk()
raam.title("Logi sisse")
raam.geometry("500x300")

# loome tekstikasti
kasutajanimi = ttk.Entry(raam)
kasutajanimi.place(x=175, y=5, width=150)
parool = ttk.Entry(raam)
parool.place(x=175, y=30, width=150)
# loome nupu
nupp=ttk.Button(raam, text="Logi sisse", command=logisisse)
nupp.place(x=70, y=70, width=150)
nupp1=ttk.Label(raam, text="Registreeri kasutaja", command=registreeri)
nupp1.place(x=250, y=70, width=150)

# ilmutame akna ekraanile
raam.mainloop()
